<% @posts.each do |post| %>

  <% if post.images.attached? %>
    <div class="images">
      <% post.images.each do |image| %>
        <%= image_tag image %>
      <% end %>
    </div>
  <% end %>
  <p><%= post.user.username %></p>
  <p><%= post.title %></p>
  <p><%= post.updated_at.strftime("%Y-%m-%d") %></p>
<% end %>
