<div class="col-md-10 user-view">
  <div class="user-view-box">
      <div class="update-content">
          <div class="row">
              <h5>アカウント情報一覧</h5>
          </div>
      </div>

      <div class="update-content">
          <div class="row">
              <label class="col-md-3" for="image">アイコン画像</label>
              
          </div>
      </div>
      <div class="update-content">
          <div class="row">
              <label class="col-md-3" for="name">ユーザー名</label>
              <div class="col-md-9"><%= @user.username %></div>
          </div>
      </div>
      <% if @user.id == current_user.id %>
      <div class="update-content">
          <div class="row">
              <label class="col-md-3" for="email">メールアドレス</label>
              <div class="col-md-9"><%= @user.email %></div>
          </div>
      </div>
      <% end %>
      <div class="update-content">
          <div class="row">
              <label class="col-md-3" for="password">プロフィール</label>
              <div class="col-md-9"><%= @user.profile %></div>
          </div>
      </div>
      <div class="update-content">
          <div class="row">
              <label class="col-md-3" for="password">パスワード</label>
              <div class="col-md-9">*********</div>
          </div>
      </div>
      <div class="update-content">
          <div class="row">
              <%= link_to "編集", edit_user_path(@user) %>
          </div>
      </div>
  </div>
</div>
